#!/bin/sh

set -e

poetry install
printf '\n'
poetry env list
printf '\n'
poetry run python -V

for script in mplocal \
              mplocal-monolithic \
              mplocal-separate-payload \
              mpglobal \
              mpglobal-monolithic \
              mpglobal-separate-payload
do
    printf "\n\n%s:\n\n" "$script"
    poetry run "$script"
done
